{
    "manifests": {
        "hochwarth/symfony-version": {
            "manifest": {
                "bundles": {
                    "HochwarthVersionBundle\\HochwarthVersionBundle": [
                        "all"
                    ]
                },
                "copy-from-recipe": {
                    "config/": "%CONFIG_DIR%/"
                },
                "env": {
                    "#1": "Access Key",
                    "VERSION_ACCESS_KEY": "CHANGEME",
                    "#2": "Access Secret",
                    "VERSION_ACCESS_SECRET": "CHANGEME"
                },
                "add-lines": [
                    {
                        "file": "config/packages/security.yaml",
                        "requires": "symfony/security-bundle",
                        "position": "after_target",
                        "target": "    access_control:",
                        "content": "\n         - { path: ^/hochwarth-version/version, roles: PUBLIC_ACCESS }"
                    }
                ],
                "post-install-output": [
                    "* TODO:",
                    "  1. Generate an Acces key and Access secret using a hash generator",
                    "  2. Use these values in the .env file and enter them in the notification tool"
                ]
            },
            "files": {
                "config/routes/hochwarth_version.yaml": {
                    "contents": [
                        "hochwarth_version:",
                        "  resource: '@HochwarthVersionBundle/Resources/config/routes/routes.yaml'"
                    ],
                    "executable": false
                }
            },
            "ref": "cb1bea825297e83e0748b8fd30dbba0c9ebed8dc"
        }
    }
}
